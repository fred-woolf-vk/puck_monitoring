[Unit]
Description=Puck monitoring startup script
After=network.target
# After=systemd-user-sessions.service
# After=network-online.target

[Service]
# User=spark
# Type=simple
# PIDFile=/run/my-service.pid
ExecStart=/home/user/influxdb/puck_monitoring_script.sh
ExecReload=/home/user/influxdb/puck_monitoring_script.sh reload
# ExecStop=/home/user/influxdb/   stop
# TimeoutSec=30
Restart=on-failure
RestartSec=30
StartLimitInterval=350
# StartLimitBurst=10

[Install]
WantedBy=multi-user.target
